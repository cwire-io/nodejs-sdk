{
  "compilerOptions": {
    "outDir": "./lib",
     "module": "commonjs",
     "declaration": true,
     "noImplicitAny": false,
     "removeComments": true,
     "noLib": false,
     "resolveJsonModule": true,
     "esModuleInterop": true,
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "target": "es6",
     "sourceMap": true,
     "lib": [
       "es6",
       "dom"
     ],
    "types": [
      "node"
    ]
  },
  "include": [
    "./server.ts"
  ],
  "typeRoots": [
    "node_modules/@types",
    "node_modules/@microsoft/microsoft-graph-client",
    "node_modules/@microsoft/microsoft-graph-types"
  ],
  "files": [
    "./@types/index.d.ts",
    "./@types/express.d.ts"
  ],
  "exclude": [
    "node_modules",
     "**/*.spec.ts",
     "**/*.test.ts"
 ]
}
