{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./lib/",
    "declarationDir": "./types/",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
